<div id="submittedMessageBox"></div>
<form action="/" method="POST" id="form">
    <div class="form-group row justify-content-center">
        <label for="inputName"></label>
        <div class="col-sm-8">
            <input name="name" type="text" class="form-control required" id="inputName" placeholder="Ваше имя">
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <label for="inputEmail"></label>
        <div class="col-sm-8">
            <input name="email" type="email" class="form-control required" id="inputEmail" placeholder="Ваша почта">
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <label for="inputPhone"></label>
        <div class="col-sm-8">
            <input name="phone" type="tel" class="form-control required" id="inputPhone" placeholder="Ваш номер телефона">
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <label for="textareaMessage"></label>
        <div class="col-sm-8">
            <textarea name="areaMessage" class="form-control required" id="textareaMessage" rows="3" placeholder="Ваше сообщение"></textarea>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <div class="col-sm-8">
            <button class="button">Отправить</button>
        </div>
    </div>
</form>